<?xml version="1.0"?>
<robot name="body" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="premaidai_body" params="parent *origin">

    <link name="body">
      <visual>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/body.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/body.dae"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.4426"/>
        <origin xyz="0.008509 0.000002 0.070698"/>
        <inertia ixx="2871.143311e-10" ixy="-0.001151e-10" ixz="237.094467e-10" iyy="2672.078857e-10" iyz="-0.003379e-10" izz="1188.332153e-10"/>
      </inertial>
    </link>

    <link name="neck_pitch">
      <visual>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/neck_pitch.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/neck_pitch.dae"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.01"/>
        <origin xyz="-0.006449 0.000002 0.008964"/>
        <inertia ixx="6.489763e-10" ixy="-0.000003e-10" ixz="-0.024047e-10" iyy="2.296302e-10" iyz="-0.000005e-10" izz="6.197822e-10"/>
      </inertial>
    </link>

    <link name="head_yaw">
      <visual>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/neck_yaw.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/neck_yaw.dae"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.01"/>
        <origin xyz="0.008100 0.000002 0.017871"/>
        <inertia ixx="12.636111e-10" ixy="-0.000001e-10" ixz="0.0" iyy="23.689224e-10" iyz="0.0" izz="17.372910e-10"/>
      </inertial>
    </link>

    <link name="head">
      <visual>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/head.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/head.dae"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1449"/>
        <origin xyz="0.014213 0.000001 0.011813"/>
        <inertia ixx="650.041687e-10" ixy="-0.000280e-10" ixz="49.702934e-10" iyy="598.413635e-10" iyz="-0.000379e-10" izz="588.398682e-10"/>
      </inertial>
    </link>

    <joint name="body_to_base_link" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${parent}"/>
      <child link="body"/>
    </joint>

    <joint name="head_ny_joint" type="revolute">
      <origin xyz="0.0038738 0 0.132809" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-10.125/180.0 * pi}" upper="${23.625/180.0 * pi}" effort="0" velocity="0"/>
      <parent link="body"/>
      <child link="neck_pitch"/>
    </joint>

    <joint name="head_nz_joint" type="revolute">
      <origin xyz="-0.0103485 0 0.011103" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-47.25/180.0 * pi}" upper="${47.25/180.0 * pi}" effort="0" velocity="0"/>
      <parent link="neck_pitch"/>
      <child link="head_yaw"/>
    </joint>

    <joint name="head_nx_joint" type="revolute">
      <origin xyz="0 0 0.0129" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit lower="${-21.9375/180.0 * pi}" upper="${28.6875/180.0 * pi}" effort="0" velocity="0"/>
      <parent link="head_yaw"/>
      <child link="head"/>
    </joint>
  </xacro:macro>
</robot>