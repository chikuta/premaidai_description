<?xml version="1.0"?>
<robot name="leg" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="premaidai_leg" params="prefix parent side *origin">

    <xacro:if value="${side=='right'}">
      <xacro:property name="sign" value="-1"/>
    </xacro:if>

    <xacro:if value="${side=='left'}">
      <xacro:property name="sign" value="1"/>
    </xacro:if>

    <link name="${prefix}_hip_joint">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_hip_joint.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_hip_joint.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_uleg_root">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_uleg_root.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_uleg_root.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_uleg">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_uleg.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_uleg.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_lleg">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_lleg.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_lleg.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_ankle">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_ankle.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_ankle.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_foot">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_foot.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://premaidai_description/meshes/${prefix}_foot.dae" scale="0.01 0.01 0.01"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}_hpz_joint" type="revolute">
      <xacro:insert_block name="origin" />
      <axis xyz="0 0 1"/>
      <limit lower="${-81.0/180.0 * pi}" upper="${102.43/180.0 * pi}" effort="0" velocity="0"/>
      <parent link="${parent}"/>
      <child link="${prefix}_hip_joint"/>
    </joint>

    <joint name="${prefix}_hpx_joint" type="revolute">
      <origin xyz="0 ${sign*-0.0021} -0.028" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <xacro:if value="${side=='right'}">
        <limit lower="${-25.35/180.0 * pi}" upper="${22.713/180.0 * pi}" effort="0" velocity="0"/>
      </xacro:if>
      <xacro:if value="${side=='left'}">
        <limit lower="${-22.713/180.0 * pi}" upper="${25.35/180.0 * pi}" effort="0" velocity="0"/>
      </xacro:if>
      <parent link="${prefix}_hip_joint"/>
      <child link="${prefix}_uleg_root"/>
    </joint>

    <joint name="${prefix}_hpy_joint" type="revolute">
      <origin xyz="0 ${sign*0.0128525} -0.034358" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-91.60/180.0 * pi}" upper="${90.213/180.0 * pi}" effort="0" velocity="0"/>
      <parent link="${prefix}_uleg_root"/>
      <child link="${prefix}_uleg"/>
    </joint>

    <joint name="${prefix}_kny_joint" type="revolute">
      <origin xyz="0 0 -0.0652" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-2.0925/180.0 * pi}" upper="${119.64/180.0 * pi}" effort="0" velocity="0"/>
      <parent link="${prefix}_uleg"/>
      <child link="${prefix}_lleg"/>
    </joint>

    <joint name="${prefix}_aky_joint" type="revolute">
      <origin xyz="0 0 -0.065" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-61.3575/180.0 * pi}" upper="${24.3/180.0 * pi}" effort="0" velocity="0"/>
      <parent link="${prefix}_lleg"/>
      <child link="${prefix}_ankle"/>
    </joint>

    <joint name="${prefix}_akx_joint" type="revolute">
      <origin xyz="0 0 -0.040677" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <xacro:if value="${side=='right'}">
        <limit lower="${-38.23875/180.0 * pi}" upper="${37.29375/180.0 * pi}" effort="0" velocity="0"/>
      </xacro:if>
      <xacro:if value="${side=='left'}">
        <limit lower="${-37.29375/180.0 * pi}" upper="${38.23875/180.0 * pi}" effort="0" velocity="0"/>
      </xacro:if>
      <parent link="${prefix}_ankle"/>
      <child link="${prefix}_foot"/>
    </joint>

  </xacro:macro>
</robot>